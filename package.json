{
  "name": "@arda-cards/ui-components",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/styles/globals.css"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "storybook dev -p 6006",
    "storybook": "storybook dev -p 6006",
    "install:vendored": "node tools/install-vendored-deps.js",
    "build-storybook": "node tools/install-vendored-deps.js && storybook build",
    "build:lib": "vite build",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:storybook": "test-storybook --testTimeout 30000",
    "test:storybook:ci": "concurrently -k -s first \"http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && test-storybook --testTimeout 30000\"",
    "test:vrt": "playwright test --project=vrt",
    "test:vrt:ci": "concurrently -k -s first \"http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && playwright test --project=vrt\"",
    "test:vrt:update": "concurrently -k -s first \"http-server storybook-static --port 6006 --silent\" \"wait-on tcp:6006 && playwright test --project=vrt --update-snapshots\"",
    "serve": "node tools/server.js"
  },
  "dependencies": {
    "ag-grid-community": "^35.1.0",
    "ag-grid-react": "^35.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.575.0",
    "tailwind-merge": "^3.5.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@storybook/addon-docs": "^10.2.8",
    "@storybook/react-vite": "^10.2.8",
    "@storybook/test-runner": "^0.24.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^3.0.0",
    "agentation": "^2.2.1",
    "concurrently": "^9.1.0",
    "eslint": "^9",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.2.0",
    "eslint-plugin-storybook": "10.2.8",
    "eslint-plugin-unicorn": "^63.0.0",
    "express": "^4.21.0",
    "express-basic-auth": "^1.2.1",
    "http-server": "^14.1.1",
    "jsdom": "^26.0.0",
    "msw": "^2.12.10",
    "msw-storybook-addon": "^2.0.6",
    "prettier": "^3.4.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "storybook": "^10.2.8",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vite": "^6.0.0",
    "vitest": "^3.0.0",
    "wait-on": "^8.0.0"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
